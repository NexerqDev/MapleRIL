        <Label Content="|   MapleStory Region Item Lookup" HorizontalAlignment="Left" Height="32" Margin="212,54,0,0" VerticalAlignment="Top" Width="236"/>
        <Image HorizontalAlignment="Left" Height="95" Margin="5,7,0,0" VerticalAlignment="Top" Width="95" Source="logo.ico"/>
        <Label Content="MapleRIL" HorizontalAlignment="Left" Height="43" Margin="105,41,0,0" VerticalAlignment="Top" Width="178" FontSize="24"/>

